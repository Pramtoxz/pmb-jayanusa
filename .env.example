# Nama aplikasi
APP_NAME=PPMB

# Environment aplikasi (local, staging, production)
APP_ENV=local

# Key aplikasi (jangan diubah)
APP_KEY=base64:your-app-key-here

# Mode debug (true untuk development, false untuk production)
APP_DEBUG=true

# URL aplikasi
APP_URL=http://localhost

# Pengaturan bahasa
APP_LOCALE=id
APP_FALLBACK_LOCALE=id
APP_FAKER_LOCALE=id_ID

# Pengaturan maintenance mode
APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# Jumlah worker PHP CLI
PHP_CLI_SERVER_WORKERS=4

# Pengaturan enkripsi password
BCRYPT_ROUNDS=12

# Pengaturan logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Konfigurasi database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=your_database_name
DB_USERNAME=your_database_username
DB_PASSWORD=your_database_password

# Pengaturan session
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Pengaturan broadcast dan queue
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

# Pengaturan cache
CACHE_STORE=database
# CACHE_PREFIX=

# Pengaturan Memcached
MEMCACHED_HOST=127.0.0.1

# Pengaturan Redis
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Pengaturan email
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=your_mail_host
MAIL_PORT=your_mail_port
MAIL_USERNAME=your_mail_username
MAIL_PASSWORD=your_mail_password
MAIL_FROM_ADDRESS="your_email@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Pengaturan AWS
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=your_aws_region
AWS_BUCKET=your_aws_bucket
AWS_USE_PATH_STYLE_ENDPOINT=false

# Nama aplikasi untuk Vite
VITE_APP_NAME="${APP_NAME}"

# Token Bot Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id
